@model RacingCup.Models.TournamentTable

<div id="table-tournament">
    <h2>Tournament Teams</h2>
    <div class="table-container">
        @for (int i = 0; i < Model.teams.Count; i++)
        {
            <div class="column-t" style="padding: @((i != 0) ? (124 * (Math.Pow(i, 2) - (i-1)))/2 : "0")px 0px">
                @for (int j = 0; j < Model.teams[i].Count; j++)
                {
                    <form method="post" asp-controller="TournamentTable" asp-action="Update">
                        <input type="hidden" name="row" value="@(i)" />
                        <input type="hidden" name="col" value="@(j)" />
                        <button class="@((Model.teams[i][j].Status) ? "button-t-blue" : "button-t-red")"
                                type="submit"
                        @((Model.teams.Count - 1 != i) && (Model.teams[i].Contains(Model.teams[i][j]) && Model.teams[i + 1].Contains(Model.teams[i][j])) ? "disabled" : "")
                        @((Model.teams[i].Count == 1) || !(Model.teams[i][j].Status) ? "disabled" : "")>
                            @* DIV Campos ventana emergente *@
                            @* El boton solo muestra la ventana la cual puede hacer ganar al team (SetWinnerLoser) o hacerlo perder (esto podria arreglar las comparaciones de 3) *@
                            @(Model.teams[i][j].Name)
                        </button>
                    </form>
                }
            </div>
        }
    </div>
</div>

