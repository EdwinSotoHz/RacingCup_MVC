@model RacingCup.Models.TournamentTable

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-12 col-md-6">
        <div class="mt-4">
            <form method="post" asp-controller="TournamentTable" asp-action="RegisterParticipant">
                <div class="form-group">
                    <label for="Name">Nombre del Equipo:</label>
                    <input type="text" id="Name" name="Name" class="form-control" required />
                </div>

                <div class="form-group">
                    <label for="Elements">Integrantes:</label>
                    <textarea id="Elements" name="Elements" class="form-control" required></textarea>
                </div>

                <div class="form-group">
                    <label for="School">Escuela:</label>
                    <input type="text" id="School" name="School" class="form-control" required />
                </div>

                <div class="form-group">
                    <label for="Category">Categoría:</label>
                    <input type="text" id="Category" name="Category" class="form-control" required />
                </div>

                <div class="form-group">
                    <label for="BestTime">Mejor Tiempo (segundos):</label>
                    <input type="number" step="0.01" id="BestTime" name="BestTime" class="form-control" required />
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary w-100">Registrar</button>
                </div>
            </form>
        </div>

        <div class="mt-4">
            <h3>Equipos Registrados:</h3>
            <ul>
                @for (int i = 0; i < Model.teams.Count; i++)
                {
                    <li>
                        <h4>Ronda @(i + 1)</h4>
                        <ul>
                            @for (int j = 0; j < Model.teams[i].Count; j++)
                            {
                                <li>
                                    <strong>Nombre:</strong> @(Model.teams[i][j].Name) <br />
                                    <strong>Integrantes:</strong> @(Model.teams[i][j].Elements) <br />
                                    <strong>Escuela:</strong> @(Model.teams[i][j].School) <br />
                                    <strong>Categoría:</strong> @(Model.teams[i][j].Category) <br />
                                    <strong>Mejor Tiempo:</strong> @(Model.teams[i][j].BestTime) segundos <br />
                                    <strong>Estatus:</strong> @(Model.teams[i][j].Status ? "Activo" : "Eliminado")
                                </li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
